{
  "$schema": "https://raw.githubusercontent.com/yaydraco/tandem/main/swarm.schema.json",
  "debug": true,
  "autoCompact": false,
  "data": {
    "directory": ".tandem/data"
  },
  "providers": {
    "copilot": {
      "apiKey": "demo-key-for-ssh-testing"
    }
  },
  "agents": {
    "orchestrator": {
      "name": "SSH Demo Orchestrator",
      "agentId": "orchestrator",
      "model": "copilot.claude-sonnet-4",
      "description": "Demo orchestrator for SSH testing without real API calls",
      "goal": "Demonstrate tandem SSH functionality",
      "instructions": [
        "This is a demo mode for SSH testing",
        "No real API calls will be made"
      ],
      "tools": []
    },
    "summarizer": {
      "name": "SSH Demo Summarizer",
      "agentId": "summarizer",
      "model": "copilot.claude-sonnet-4",
      "description": "Demo summarizer for SSH testing",
      "goal": "Demo summarization in SSH mode",
      "instructions": [
        "This is a demo mode for SSH testing"
      ]
    }
  }
}